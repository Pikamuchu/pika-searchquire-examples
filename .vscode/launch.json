{
    "version": "0.1.0",
    "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "runtimeArgs": [],
      "args": [
        "${workspaceFolder}/test/**/*.js",
        "--require",
        "@babel/register",
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors"
      ],
      "env": {
        "NODE_ENV": "test",
      },
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }]
}
